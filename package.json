{
    "name": "dreamed-backend",
    "version": "1.0.0",
    "description": "Backend Scaffolding by alidev",
    "author": "alidev00",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "build": "tsc && tsc-alias",
        "build:watch": "tsc --watch",
        "build:prod": "tsc --project tsconfig.prod.json && tsc-alias -p tsconfig.prod.json",
        "start": "node dist/index.js",
        "dev": "tsx watch --clear-screen=true src/index.ts",
        "dev:verbose": "tsx watch --log-level=debug src/index.ts",
        "dev:inspect": "tsx watch --inspect src/index.ts",
        "dev:simple": "tsx src/index.ts",
        "dev:nodemon": "nodemon --exec \"tsx src/index.ts\" --ext ts,json",
        "clean": "rm -rf dist",
        "clean:all": "rm -rf dist node_modules/.cache",
        "lint": "eslint src --ext .ts",
        "type-check": "tsc --noEmit"
    },
    "devDependencies": {
        "@types/bcryptjs": "^3.0.0",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/helmet": "^4.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/morgan": "^1.9.10",
        "@types/multer": "^2.0.0",
        "@types/node": "^25.0.3",
        "@typescript-eslint/eslint-plugin": "^8.50.0",
        "@typescript-eslint/parser": "^8.50.0",
        "eslint": "^9.39.2",
        "nodemon": "^3.1.11",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.16",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "@types/cookie-parser": "^1.4.10",
        "@types/sequelize": "^6.12.0",
        "bcryptjs": "^3.0.3",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "helmet": "^8.1.0",
        "joi": "^18.0.2",
        "jsonwebtoken": "^9.0.3",
        "mime-types": "^3.0.2",
        "mongoose": "^9.0.2",
        "morgan": "^1.10.1",
        "multer": "^2.0.2",
        "nanoid": "^5.1.6",
        "sequelize": "^6.37.7"
    }
}
